<UserControl x:Class="MixItUp.Distribution.Installer.PolicyDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:MaterialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:wpfui="clr-namespace:Wpf.Ui.Markdown.Controls;assembly=Wpf.Ui.Markdown"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="800">
  <Grid Width="700" MinHeight="480" MaxHeight="720">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <StackPanel Grid.Row="0" Margin="0,0,0,16">
      <TextBlock Text="Review and Accept Policies"
                 FontSize="20"
                 FontWeight="SemiBold"
                 Margin="0,0,0,4"/>
      <TextBlock Text="Please review the following policies. You must accept all documents before continuing."
                 TextWrapping="Wrap" />
    </StackPanel>

    <TabControl Grid.Row="1"
                ItemsSource="{Binding Policies}"
                Margin="0,0,0,16">
      <TabControl.ItemTemplate>
        <DataTemplate>
          <TextBlock Text="{Binding Title}" />
        </DataTemplate>
      </TabControl.ItemTemplate>
      <TabControl.ContentTemplate>
        <DataTemplate>
          <Grid>
            <Grid.RowDefinitions>
              <RowDefinition Height="*"/>
              <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <ScrollViewer Grid.Row="0"
                          VerticalScrollBarVisibility="Auto"
                          Margin="0,0,0,12">
              <wpfui:MarkdownViewer Markdown="{Binding Markdown}" />
            </ScrollViewer>
            <CheckBox Grid.Row="1"
                      Content="{Binding Title, StringFormat=I have read and accept the {0}.}"
                      IsChecked="{Binding IsAccepted, Mode=TwoWay}"
                      Margin="0,0,0,4" />
            <TextBlock Grid.Row="1"
                       Text="{Binding Version, StringFormat=Version\: {0}}"
                       Margin="0,32,0,0"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Foreground="{DynamicResource MaterialDesign.Brush.OnBackground}"/>
          </Grid>
        </DataTemplate>
      </TabControl.ContentTemplate>
    </TabControl>

    <StackPanel Grid.Row="2"
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                Margin="0,16,0,0">
      <Button Content="Decline"
              Margin="0,0,8,0"
              Padding="20,10"
              Command="{x:Static MaterialDesign:DialogHost.CloseDialogCommand}"
              CommandParameter="False" />
      <Button Content="Accept"
              Padding="20,10"
              IsEnabled="{Binding CanAccept}"
              Command="{x:Static MaterialDesign:DialogHost.CloseDialogCommand}"
              CommandParameter="True" />
    </StackPanel>
  </Grid>
</UserControl>




