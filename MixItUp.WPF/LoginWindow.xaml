<Windows:LoadingWindowBase
    x:Class="MixItUp.WPF.LoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:MixItUp.WPF.Controls"
    xmlns:MaterialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:Windows="clr-namespace:MixItUp.WPF.Windows"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:resx="clr-namespace:MixItUp.Base;assembly=MixItUp.Base"
    Title="{x:Static resx:Resources.MixItUpLogin}"
    Width="900"
    Height="650"
    MinWidth="900"
    MinHeight="600"
    FontFamily="{MaterialDesign:MaterialDesignFont}"
    Icon="./Logo.ico"
    Style="{StaticResource MaterialDesignWindow}"
    TextElement.FontSize="14"
    TextElement.FontWeight="Medium"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <MaterialDesign:DialogHost
            x:Name="MDDialogHost"
            Grid.RowSpan="3"
            Identifier="RootDialog" />

        <Grid Grid.Row="0" Margin="40,30,40,30">
            <MaterialDesign:Card
                MaxWidth="800"
                Padding="60,40"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                MaterialDesign:ElevationAssist.Elevation="Dp16"
                UniformCornerRadius="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="60" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>


                    <Image
                        Grid.Column="0"
                        Width="140"
                        Height="140"
                        VerticalAlignment="Center"
                        Source="/Logo.png"
                        Stretch="Uniform" />


                    <StackPanel
                        Grid.Column="2"
                        MinWidth="400"
                        VerticalAlignment="Center">

                        <TextBlock
                            Margin="0,0,0,16"
                            FontSize="20"
                            FontWeight="SemiBold"
                            Text="{x:Static resx:Resources.ExistingProfile}" />

                        <ComboBox
                            x:Name="ExistingStreamerComboBox"
                            Margin="0,0,0,12"
                            DisplayMemberPath="Name"
                            Style="{StaticResource MaterialDesignOutlinedComboBox}"
                            Visibility="Collapsed" />

                        <Button
                            x:Name="StreamerLoginButton"
                            Height="44"
                            Margin="0,0,0,32"
                            Click="StreamerLoginButton_Click"
                            Content="{x:Static resx:Resources.Login}"
                            IsEnabled="False"
                            Style="{StaticResource MaterialDesignRaisedButton}" />


                        <Separator Margin="0,0,0,32" />


                        <TextBlock
                            Margin="0,0,0,16"
                            FontSize="20"
                            FontWeight="SemiBold"
                            Text="{x:Static resx:Resources.NewProfile}" />

                        <Button
                            x:Name="NewStreamerLoginButton"
                            Height="44"
                            Margin="0,0,0,12"
                            Click="NewStreamerLoginButton_Click"
                            Content="{x:Static resx:Resources.NewProfile}"
                            Style="{StaticResource MaterialDesignRaisedButton}" />

                        <Button
                            x:Name="RestoreBackupButton"
                            Height="44"
                            Click="RestoreBackupButton_Click"
                            Content="{x:Static resx:Resources.RestoreSettings}"
                            Style="{StaticResource MaterialDesignOutlinedButton}" />
                    </StackPanel>
                </Grid>
            </MaterialDesign:Card>
        </Grid>


        <StackPanel
            Grid.Row="1"
            Margin="0,0,0,12"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <TextBlock>
                <Hyperlink NavigateUri="https://mixitupapp.com/TermsOfService" RequestNavigate="Hyperlink_RequestNavigate">
                    <TextBlock FontSize="11" Text="Terms of Service" />
                </Hyperlink>
            </TextBlock>
            <TextBlock
                Margin="8,0"
                FontSize="11"
                Opacity="0.6"
                Text=" • " />
            <TextBlock>
                <Hyperlink NavigateUri="https://mixitupapp.com/Privacy" RequestNavigate="Hyperlink_RequestNavigate">
                    <TextBlock FontSize="11" Text="Privacy Policy" />
                </Hyperlink>
            </TextBlock>
            <TextBlock
                Margin="8,0"
                FontSize="11"
                Opacity="0.6"
                Text=" • " />
            <TextBlock>
                <Hyperlink NavigateUri="https://mixitupapp.com/License" RequestNavigate="Hyperlink_RequestNavigate">
                    <TextBlock FontSize="11" Text="License" />
                </Hyperlink>
            </TextBlock>
        </StackPanel>


        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Margin="0,0,0,8"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="11"
                Opacity="0.7"
                Text="© Blazing Cacti LLC 2025" />

            <Controls:LoadingStatusBar x:Name="StatusBar" Grid.Row="1" />
        </Grid>
    </Grid>
</Windows:LoadingWindowBase>