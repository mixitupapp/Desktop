<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:po="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"> 
  <SolidColorBrush x:Key="PrimaryHueLightBrush" Color="#DD3F2845" po:Freeze="True" />                   <!-- Emphasis Background -->
  <SolidColorBrush x:Key="PrimaryHueLightForegroundBrush" Color="#DDB18CBD" po:Freeze="True" />         <!-- Emphasis Text -->
  <SolidColorBrush x:Key="PrimaryHueMidBrush" Color="#DDB18CBD" po:Freeze="True" />                     <!-- Main Background -->
  <SolidColorBrush x:Key="PrimaryHueMidForegroundBrush" Color="#DD3F2845" po:Freeze="True" />           <!-- Main Foreground -->
  <SolidColorBrush x:Key="PrimaryHueDarkBrush" Color="#DD9463A5" po:Freeze="True" />                    <!-- Highlight Background -->
  <SolidColorBrush x:Key="PrimaryHueDarkForegroundBrush" Color="#DD3F2845" po:Freeze="True" />          <!-- Unknown... -->

  <SolidColorBrush x:Key="MainApplicationBackground" Color="White" po:Freeze="True" />                  <!-- Application Background -->
</ResourceDictionary>