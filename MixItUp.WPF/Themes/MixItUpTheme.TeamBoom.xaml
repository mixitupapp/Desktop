<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:po="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"> 
  <SolidColorBrush x:Key="PrimaryHueLightBrush" Color="Black" po:Freeze="True" />                       <!-- Emphasis Background -->
  <SolidColorBrush x:Key="PrimaryHueLightForegroundBrush" Color="Teal" po:Freeze="True" />              <!-- Emphasis Text -->
  <SolidColorBrush x:Key="PrimaryHueMidBrush" Color="Purple" po:Freeze="True" />                        <!-- Main Background -->
  <SolidColorBrush x:Key="PrimaryHueMidForegroundBrush" Color="Teal" po:Freeze="True" />                <!-- Main Foreground -->
  <SolidColorBrush x:Key="PrimaryHueDarkBrush" Color="Teal" po:Freeze="True" />                         <!-- Highlight Background -->
  <SolidColorBrush x:Key="PrimaryHueDarkForegroundBrush" Color="Teal" po:Freeze="True" />               <!-- Unknown... -->

  <SolidColorBrush x:Key="MainApplicationBackground" Color="Black" po:Freeze="True" />                  <!-- Application Background -->
</ResourceDictionary>