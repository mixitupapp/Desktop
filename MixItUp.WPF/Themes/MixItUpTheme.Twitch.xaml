<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:po="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options">
  <SolidColorBrush x:Key="MaterialDesign.Brush.Primary.Light" Color="#DD3A3A3D" po:Freeze="True" />                   <!-- Emphasis Background -->
  <SolidColorBrush x:Key="MaterialDesign.Brush.Primary.Light.Foreground" Color="White" po:Freeze="True" />             <!-- Emphasis Text -->
  <SolidColorBrush x:Key="MaterialDesign.Brush.Primary" Color="#DD9147FF" po:Freeze="True" />                     <!-- Main Background -->
  <SolidColorBrush x:Key="MaterialDesign.Brush.Primary.Foreground" Color="White" po:Freeze="True" />               <!-- Main Foreground -->
  <SolidColorBrush x:Key="MaterialDesign.Brush.Primary.Dark" Color="#DD1F1F23" po:Freeze="True" />                    <!-- Highlight Background -->
  <SolidColorBrush x:Key="MaterialDesign.Brush.Primary.Dark.Foreground" Color="Black" po:Freeze="True" />              <!-- Unknown... -->

  <SolidColorBrush x:Key="MainApplicationBackground" Color="Black" po:Freeze="True" />                  <!-- Application Background -->
</ResourceDictionary>