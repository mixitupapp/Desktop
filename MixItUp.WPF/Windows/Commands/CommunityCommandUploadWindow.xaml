<Windows:LoadingWindowBase
    x:Class="MixItUp.WPF.Windows.Commands.CommunityCommandUploadWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:MixItUp.WPF.Controls"
    xmlns:MaterialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:Windows="clr-namespace:MixItUp.WPF.Windows"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:resx="clr-namespace:MixItUp.Base;assembly=MixItUp.Base"
    Title="{x:Static resx:Resources.CommunityCommandsUploadCommunityCommand}"
    Width="600"
    Height="560"
    FontFamily="{MaterialDesign:MaterialDesignFont}"
    Style="{StaticResource MaterialDesignWindow}"
    TextElement.FontSize="14"
    TextElement.FontWeight="Medium"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <MaterialDesign:DialogHost x:Name="MDDialogHost" Identifier="RootDialog" />

        <Grid Grid.Row="0" Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="15" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="15" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="15" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="15" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="30" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                HorizontalAlignment="Center"
                FontSize="24"
                FontWeight="Bold"
                Text="{x:Static resx:Resources.CommunityCommandsUploadCommunityCommand}"
                TextDecorations="Underline" />

            <TextBox
                x:Name="NameTextBox"
                Grid.Row="2"
                MaterialDesign:HintAssist.Hint="{x:Static resx:Resources.Name}"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" />

            <TextBox
                x:Name="DescriptionTextBox"
                Grid.Row="4"
                Height="200"
                MaterialDesign:HintAssist.Hint="{x:Static resx:Resources.Description}"
                AcceptsReturn="True"
                AcceptsTab="True"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                TextWrapping="Wrap" />

            <Grid Grid.Row="6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBox
                    x:Name="ImageFilePathTextBox"
                    Grid.Column="0"
                    MaterialDesign:HintAssist.Hint="{x:Static resx:Resources.CommunityCommandsImageFilePath}"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                <Button
                    x:Name="BrowseImageFilePathButton"
                    Grid.Column="2"
                    Click="BrowseImageFilePathButton_Click"
                    Content="{x:Static resx:Resources.Browse}" />
            </Grid>

            <Grid Grid.Row="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBox
                    x:Name="ScreenshotFilePathTextBox"
                    Grid.Column="0"
                    MaterialDesign:HintAssist.Hint="{x:Static resx:Resources.CommunityCommandsScreenshotFilePath}"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                <Button
                    x:Name="BrowseScreenshotFilePathButton"
                    Grid.Column="2"
                    Click="BrowseScreenshotFilePathButton_Click"
                    Content="{x:Static resx:Resources.Browse}" />
            </Grid>

            <Grid Grid.Row="10" HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button
                    x:Name="UploadButton"
                    Grid.Column="0"
                    Click="UploadButton_Click"
                    Content="{x:Static resx:Resources.Upload}" />

                <Button
                    x:Name="CancelButton"
                    Grid.Column="2"
                    Click="CancelButton_Click"
                    Content="{x:Static resx:Resources.Cancel}" />
            </Grid>
        </Grid>

        <Controls:LoadingStatusBar x:Name="StatusBar" Grid.Row="1" />
    </Grid>
</Windows:LoadingWindowBase>
