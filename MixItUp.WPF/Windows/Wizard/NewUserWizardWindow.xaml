<Windows:LoadingWindowBase
    x:Class="MixItUp.WPF.Windows.Wizard.NewUserWizardWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:AccountControls="clr-namespace:MixItUp.WPF.Controls.Accounts"
    xmlns:Controls="clr-namespace:MixItUp.WPF.Controls"
    xmlns:MaterialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:Windows="clr-namespace:MixItUp.WPF.Windows"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MixItUp.WPF.Windows.Wizard"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:resx="clr-namespace:MixItUp.Base;assembly=MixItUp.Base"
    Title="{x:Static resx:Resources.MixItUpNewUserWizard}"
    Width="800"
    Height="600"
    FontFamily="{MaterialDesign:MaterialDesignFont}"
    Icon="./../../Logo.ico"
    Style="{StaticResource MaterialDesignWindow}"
    TextElement.FontSize="14"
    TextElement.FontWeight="Medium"
    mc:Ignorable="d">
    <Windows:LoadingWindowBase.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Windows:LoadingWindowBase.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <MaterialDesign:DialogHost x:Name="MDDialogHost" Identifier="RootDialog" />

        <Grid
            x:Name="MainGrid"
            Grid.Row="0"
            Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="10" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid
                Grid.Row="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <Grid Visibility="{Binding IntroPageVisible, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="20" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="40" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="40" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Image
                        Grid.Row="0"
                        Width="500"
                        Margin="-15,0,0,0"
                        HorizontalAlignment="Center"
                        Source="/Assets/Images/MixItUp-Logo-Name.png" />

                    <TextBlock
                        Grid.Row="2"
                        Width="700"
                        Text="{x:Static resx:Resources.WizardIntro1}"
                        TextWrapping="Wrap" />

                    <TextBlock
                        Grid.Row="4"
                        Width="700"
                        Text="{x:Static resx:Resources.WizardIntro2}"
                        TextWrapping="Wrap" />

                    <Grid Grid.Row="6" HorizontalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition Width="250" />
                            <ColumnDefinition Width="40" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition Width="250" />
                        </Grid.ColumnDefinitions>

                        <Button
                            Grid.Column="0"
                            Width="60"
                            Height="60"
                            Background="Transparent"
                            Command="{Binding DiscordCommand}">
                            <Image
                                Width="50"
                                Height="50"
                                Margin="-10,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Source="/Assets/Images/Discord.png" />
                        </Button>

                        <TextBlock
                            Grid.Column="2"
                            VerticalAlignment="Center"
                            Text="{x:Static resx:Resources.WizardIntro3}"
                            TextWrapping="Wrap" />

                        <Button
                            Grid.Column="4"
                            Width="60"
                            Height="60"
                            Background="Transparent"
                            Command="{Binding TwitterCommand}">
                            <Image
                                Width="45"
                                Height="45"
                                Margin="-10,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Source="/Assets/Images/Twitter.png" />
                        </Button>

                        <TextBlock
                            Grid.Column="6"
                            Width="230"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Text="{x:Static resx:Resources.WizardIntro4}"
                            TextWrapping="Wrap" />
                    </Grid>

                    <Grid Grid.Row="8" HorizontalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition Width="250" />
                            <ColumnDefinition Width="40" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition Width="250" />
                        </Grid.ColumnDefinitions>

                        <Button
                            Grid.Column="0"
                            Width="60"
                            Height="60"
                            Background="Transparent"
                            Command="{Binding YouTubeCommand}">
                            <Image
                                Width="45"
                                Height="45"
                                Margin="-10,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Source="/Assets/Images/YouTube.png" />
                        </Button>

                        <TextBlock
                            Grid.Column="2"
                            Width="220"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Text="{x:Static resx:Resources.WizardIntro5}"
                            TextWrapping="Wrap" />

                        <Button
                            Grid.Column="4"
                            Width="60"
                            Height="60"
                            Background="Transparent"
                            Command="{Binding WikiCommand}">
                            <Image
                                Width="50"
                                Height="50"
                                Margin="-10,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Source="/Assets/Images/Wiki.png" />
                        </Button>

                        <TextBlock
                            Grid.Column="6"
                            Width="240"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Text="{x:Static resx:Resources.WizardIntro6}"
                            TextWrapping="Wrap" />
                    </Grid>
                </Grid>

                <Grid Visibility="{Binding StreamerAccountsPageVisible, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="20" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="20" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Width="700"
                        Text="{x:Static resx:Resources.AccountsWizardInstructions}"
                        TextWrapping="Wrap" />

                    <TextBlock
                        Grid.Row="2"
                        Width="700"
                        Text="{x:Static resx:Resources.AccountsDetails}"
                        TextWrapping="Wrap" />

                    <ScrollViewer Grid.Row="4" VerticalScrollBarVisibility="Visible">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="20" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="20" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <AccountControls:StreamingPlatformAccountControl Grid.Row="0" DataContext="{Binding Twitch}" />

                            <AccountControls:StreamingPlatformAccountControl Grid.Row="2" DataContext="{Binding YouTube}" />

                            <AccountControls:StreamingPlatformAccountControl Grid.Row="4" DataContext="{Binding Trovo}" />
                        </Grid>
                    </ScrollViewer>
                </Grid>

                <Grid Visibility="{Binding CommandActionsPageVisible, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0" VerticalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="40" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Grid
                            Grid.Row="0"
                            Width="350"
                            VerticalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="20" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                Text="{x:Static resx:Resources.WizardCommands1}"
                                TextWrapping="Wrap" />

                            <TextBlock
                                Grid.Row="2"
                                Text="{x:Static resx:Resources.WizardCommands2}"
                                TextWrapping="Wrap" />
                        </Grid>

                        <Image
                            Grid.Row="2"
                            Width="200"
                            VerticalAlignment="Bottom"
                            Source="/Assets/Images/CommandExample.png" />
                    </Grid>

                    <Grid Grid.Column="2" VerticalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="40" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Image
                            Grid.Row="0"
                            Width="200"
                            VerticalAlignment="Top"
                            Source="/Assets/Images/ExampleRecipe.png" />

                        <Grid
                            Grid.Row="2"
                            Width="350"
                            VerticalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="20" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                Text="{x:Static resx:Resources.WizardCommands3}"
                                TextWrapping="Wrap" />

                            <TextBlock
                                Grid.Row="2"
                                Text="{x:Static resx:Resources.WizardCommands4}"
                                TextWrapping="Wrap" />
                        </Grid>
                    </Grid>
                </Grid>

                <Grid Visibility="{Binding FinalPageVisible, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Visible}">
                    <Grid Grid.Row="6">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="50" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="50" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="50" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="50" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" HorizontalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="20" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Grid.Column="0"
                                Width="450"
                                VerticalAlignment="Center"
                                Text="{x:Static resx:Resources.WizardFinal1}"
                                TextWrapping="Wrap" />

                            <Grid Grid.Column="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="10" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <Button
                                    x:Name="SettingsBackupLocationButton"
                                    Grid.Row="0"
                                    Command="{Binding SetBackupLocationCommand}"
                                    Content="Set Location"
                                    Style="{StaticResource MaterialDesignRaisedButton}" />

                                <ComboBox
                                    x:Name="SettingsBackupRateComboBox"
                                    Grid.Row="2"
                                    Width="110"
                                    MaterialDesign:HintAssist.Hint="{x:Static resx:Resources.BackupRate}"
                                    IsEnabled="{Binding IsBackupLocationSet}"
                                    ItemsSource="{Binding SettingsBackupOptions}"
                                    SelectedItem="{Binding SelectedSettingsBackupOption}"
                                    Style="{StaticResource MaterialDesignOutlinedComboBox}" />
                            </Grid>
                        </Grid>

                        <Grid Grid.Row="2" HorizontalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="20" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Grid.Column="0"
                                Width="450"
                                Text="{x:Static resx:Resources.WizardFinal2}"
                                TextWrapping="Wrap" />

                            <Controls:IconButton
                                Grid.Column="2"
                                HorizontalAlignment="Center"
                                Icon="Help"
                                ToolTip="{x:Static resx:Resources.Help}" />
                        </Grid>

                        <TextBlock
                            Grid.Row="4"
                            Width="500"
                            Text="{x:Static resx:Resources.WizardFinal3}"
                            TextWrapping="Wrap" />

                        <Grid Grid.Row="6" HorizontalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="20" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="20" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="20" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Button
                                Grid.Column="0"
                                Width="60"
                                Height="60"
                                Background="Transparent"
                                Command="{Binding DiscordCommand}">
                                <Image
                                    Width="50"
                                    Height="50"
                                    Margin="-10,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Source="/Assets/Images/Discord.png" />
                            </Button>

                            <Button
                                Grid.Column="2"
                                Width="60"
                                Height="60"
                                Background="Transparent"
                                Command="{Binding TwitterCommand}">
                                <Image
                                    Width="45"
                                    Height="45"
                                    Margin="-10,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Source="/Assets/Images/Twitter.png" />
                            </Button>

                            <Button
                                Grid.Column="4"
                                Width="60"
                                Height="60"
                                Background="Transparent"
                                Command="{Binding YouTubeCommand}">
                                <Image
                                    Width="45"
                                    Height="45"
                                    Margin="-10,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Source="/Assets/Images/YouTube.png" />
                            </Button>

                            <Button
                                Grid.Column="6"
                                Width="60"
                                Height="60"
                                Background="Transparent"
                                Command="{Binding WikiCommand}">
                                <Image
                                    Width="50"
                                    Height="50"
                                    Margin="-10,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Source="/Assets/Images/Wiki.png" />
                            </Button>
                        </Grid>

                        <TextBlock
                            Grid.Row="8"
                            HorizontalAlignment="Center"
                            Text="{x:Static resx:Resources.WizardFinal4}"
                            TextWrapping="Wrap" />
                    </Grid>
                </Grid>
            </Grid>

            <Grid
                x:Name="WizardButtonsGrid"
                Grid.Row="2"
                Margin="10,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Column="0"
                    Width="400"
                    VerticalAlignment="Center"
                    Text="{Binding StatusMessage}"
                    TextWrapping="Wrap" />

                <Button
                    Grid.Column="2"
                    Height="40"
                    MinWidth="120"
                    Command="{Binding BackCommand}"
                    Content="{x:Static resx:Resources.WizardBack}"
                    IsEnabled="{Binding CanBack}"
                    Style="{StaticResource MaterialDesignOutlinedButton}" />

                <Button
                    Grid.Column="4"
                    Height="40"
                    MinWidth="120"
                    Command="{Binding NextCommand}"
                    Content="{x:Static resx:Resources.WizardNext}"
                    IsEnabled="{Binding CanNext}"
                    Style="{StaticResource MaterialDesignRaisedButton}" />
            </Grid>
        </Grid>

        <Controls:LoadingStatusBar x:Name="StatusBar" Grid.Row="2" />
    </Grid>
</Windows:LoadingWindowBase>