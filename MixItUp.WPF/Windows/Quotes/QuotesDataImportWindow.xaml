<Windows:LoadingWindowBase
    x:Class="MixItUp.WPF.Windows.Quotes.QuotesDataImportWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:MixItUp.WPF.Controls"
    xmlns:MaterialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:Util="clr-namespace:MixItUp.WPF.Util"
    xmlns:Windows="clr-namespace:MixItUp.WPF.Windows"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MixItUp.WPF.Windows.Currency"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:resx="clr-namespace:MixItUp.Base;assembly=MixItUp.Base"
    Title="{x:Static resx:Resources.QuotesDataImport}"
    Width="600"
    Height="650"
    FontFamily="{MaterialDesign:MaterialDesignFont}"
    Icon="./../../Logo.ico"
    Style="{StaticResource MaterialDesignWindow}"
    TextElement.FontSize="14"
    TextElement.FontWeight="Medium"
    mc:Ignorable="d">
    <Windows:LoadingWindowBase.Resources>
        <Util:LocalizationConverter x:Key="LocalizationConverter" />

        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Windows:LoadingWindowBase.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <MaterialDesign:DialogHost x:Name="MDDialogHost" Identifier="RootDialog" />

        <Grid Grid.Row="0" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="20" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="20" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="20" />
                <RowDefinition Height="*" />
                <RowDefinition Height="20" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Width="520"
                Margin="0,20,0,0"
                HorizontalAlignment="Center"
                Text="{x:Static resx:Resources.QuotesDataImportStep1}"
                TextWrapping="Wrap" />

            <Grid Grid.Row="2" Margin="40,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBox
                    Grid.Row="0"
                    Grid.Column="0"
                    Height="50"
                    MaterialDesign:HintAssist.Hint="{x:Static resx:Resources.FilePath}"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="{Binding QuotesDataFilePath}" />
                <Button
                    Grid.Row="0"
                    Grid.Column="2"
                    Height="50"
                    VerticalAlignment="Bottom"
                    Command="{Binding QuotesDataFileBrowseCommand}"
                    Content="{x:Static resx:Resources.Browse}"
                    Style="{StaticResource MaterialDesignOutlinedButton}" />
            </Grid>

            <TextBlock
                Grid.Row="4"
                Margin="20,0"
                HorizontalAlignment="Center"
                Text="{x:Static resx:Resources.QuotesDataImportStep2}"
                TextWrapping="Wrap" />

            <ScrollViewer
                Grid.Row="6"
                HorizontalScrollBarVisibility="Disabled"
                VerticalScrollBarVisibility="Visible">
                <ItemsControl HorizontalAlignment="Center" ItemsSource="{Binding Columns}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200" />
                                    <ColumnDefinition Width="20" />
                                    <ColumnDefinition Width="100" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Text="{Binding Name}" />

                                <TextBox
                                    Grid.Column="2"
                                    MaterialDesign:HintAssist.Hint="{x:Static resx:Resources.ColumnNumber}"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                    Text="{Binding ColumnNumber}" />
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <Button
                Grid.Row="8"
                Width="160"
                Height="50"
                Command="{Binding ImportButtonCommand}"
                Content="{Binding ImportButtonText}"
                IsEnabled="{Binding ImportButtonState}"
                Style="{StaticResource MaterialDesignRaisedButton}" />

        </Grid>

        <Controls:LoadingStatusBar x:Name="StatusBar" Grid.Row="1" />
    </Grid>
</Windows:LoadingWindowBase>