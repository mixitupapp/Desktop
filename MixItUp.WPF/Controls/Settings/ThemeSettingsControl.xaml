<local:SettingsControlBase x:Class="MixItUp.WPF.Controls.Settings.ThemeSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MixItUp.WPF.Controls.Settings"
             xmlns:resx="clr-namespace:MixItUp.Base;assembly=MixItUp.Base"
             xmlns:System="clr-namespace:System;assembly=System.Runtime"
             xmlns:MaterialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:GenericSettingsControls="clr-namespace:MixItUp.WPF.Controls.Settings.Generic"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <StackPanel>
            <GenericSettingsControls:GenericColorComboBoxSettingsOptionControl 
                DataContext="{Binding ColorScheme}" 
                IsEnabled="{Binding DataContext.IsColorSchemeEnabled, RelativeSource={RelativeSource AncestorType=local:SettingsControlBase}}" />

            <GenericSettingsControls:GenericComboBoxSettingsOptionControl 
                DataContext="{Binding BackgroundColor}" 
                IsEnabled="{Binding DataContext.IsBackgroundColorEnabled, RelativeSource={RelativeSource AncestorType=local:SettingsControlBase}}" />

            <Separator Margin="10" />
            <GenericSettingsControls:GenericComboBoxSettingsOptionControl DataContext="{Binding FullTheme}" />
        </StackPanel>
    </Grid>
</local:SettingsControlBase>