<local:ActionEditorControlBase
    x:Class="MixItUp.WPF.Controls.Actions.ChatActionEditorControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:MaterialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:System="clr-namespace:System;assembly=System.Runtime"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MixItUp.WPF.Controls.Actions"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:resx="clr-namespace:MixItUp.Base;assembly=MixItUp.Base"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="30" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="30" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Column="0"
                VerticalAlignment="Center"
                Text="{Binding Source={x:Static resx:Resources.SendAsStreamer}, StringFormat={x:Static resx:Resources.ColumnHeaderFormat}}" />
            <ToggleButton
                Grid.Column="2"
                VerticalAlignment="Center"
                IsChecked="{Binding SendAsStreamer}" />
            <TextBlock
                Grid.Column="4"
                VerticalAlignment="Center"
                Text="{Binding Source={x:Static resx:Resources.Whisper}, StringFormat={x:Static resx:Resources.ColumnHeaderFormat}}"
                ToolTip="{x:Static resx:Resources.WhisperTooltip}" />
            <ToggleButton
                Grid.Column="6"
                VerticalAlignment="Center"
                IsChecked="{Binding IsWhisper}"
                ToolTip="{x:Static resx:Resources.WhisperTooltip}" />
            <TextBox
                Grid.Column="8"
                Width="150"
                MaterialDesign:HintAssist.Hint="{x:Static resx:Resources.WhisperUserOptional}"
                IsEnabled="{Binding IsWhisper}"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                Text="{Binding WhisperUserName}"
                ToolTip="{x:Static resx:Resources.WhisperTooltip}" />
            <TextBlock
                Grid.Column="10"
                HorizontalAlignment="Right"
                VerticalAlignment="Center">
                <Hyperlink NavigateUri="https://wiki.mixitupapp.com/special-identifiers" RequestNavigate="Hyperlink_RequestNavigate">
                    <TextBlock Text="{x:Static resx:Resources.SpecialIdentifiers}" />
                </Hyperlink>
            </TextBlock>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <ComboBox Grid.Column="0"
                      ItemsSource="{Binding PlatformOptions}"
                      SelectedItem="{Binding SelectedPlatform, Mode=TwoWay}"
                      Width="40"
                      VerticalAlignment="Center"
                      MaterialDesign:HintAssist.Hint="Platform">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Image Source="{Binding LogoPath}" 
                                   Width="20" 
                                   Height="20"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center">
                                <Image.Style>
                                    <Style TargetType="Image">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding LogoPath}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Image.Style>
                            </Image>
                            <TextBlock Text="{Binding Name}" 
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding LogoPath}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
                <ComboBox.ItemContainerStyle>
                    <Style TargetType="ComboBoxItem" BasedOn="{StaticResource {x:Type ComboBoxItem}}">
                        <Setter Property="ToolTip" Value="{Binding Name}" />
                    </Style>
                </ComboBox.ItemContainerStyle>
            </ComboBox>
            <TextBox
                Grid.Column="2"
                Height="90"
                MaterialDesign:HintAssist.Hint="{x:Static resx:Resources.ChatMessage}"
                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                Text="{Binding ChatText}"
                TextWrapping="Wrap" />
        </Grid>
    </Grid>
</local:ActionEditorControlBase>