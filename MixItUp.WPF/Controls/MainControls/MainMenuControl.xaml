<local:MainControlBase
    x:Class="MixItUp.WPF.Controls.MainControls.MainMenuControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:MixItUp.WPF.Controls"
    xmlns:DragDrop="clr-namespace:GongSolutions.Wpf.DragDrop;assembly=GongSolutions.Wpf.DragDrop"
    xmlns:MaterialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:SettingsControls="clr-namespace:MixItUp.WPF.Controls.Settings"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MixItUp.WPF.Controls.MainControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:resx="clr-namespace:MixItUp.Base;assembly=MixItUp.Base"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <local:MainControlBase.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

        <DataTemplate x:Key="DragAdornerTemplate">
            <Border
                Padding="12,8"
                Background="{DynamicResource MaterialDesignPaper}"
                BorderBrush="{DynamicResource MaterialDesign.Brush.Primary}"
                BorderThickness="2"
                CornerRadius="4"
                Opacity="0.85">
                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="8"
                        Opacity="0.5"
                        ShadowDepth="4" />
                </Border.Effect>
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontWeight="Medium"
                        Text="{Binding Name}" />
                </StackPanel>
            </Border>
        </DataTemplate>
    </local:MainControlBase.Resources>

    <Grid>
        <MaterialDesign:DialogHost
            x:Name="FlyoutMenuDialog"
            Identifier="FlyoutMenuDialog"
            SnackbarMessageQueue="{Binding ElementName=MainSnackbar, Path=MessageQueue}">
            <MaterialDesign:DrawerHost IsLeftDrawerOpen="{Binding ElementName=MenuToggleButton, Path=IsChecked}">
                <MaterialDesign:DrawerHost.LeftDrawerContent>
                    <DockPanel MinWidth="220">
                        <ToggleButton
                            Margin="16"
                            HorizontalAlignment="Right"
                            DockPanel.Dock="Top"
                            IsChecked="{Binding ElementName=MenuToggleButton, Path=IsChecked, Mode=TwoWay}"
                            Style="{StaticResource MaterialDesignHamburgerToggleButton}" />

                        <Grid Margin="16,0,16,16" DockPanel.Dock="Bottom">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <ToggleButton
                                x:Name="EditMenuButton"
                                Grid.Column="0"
                                Margin="0,0,8,0"
                                Checked="EditMenuButton_Checked"
                                Unchecked="EditMenuButton_Unchecked">
                                <ToggleButton.Content>
                                    <MaterialDesign:PackIcon
                                        Width="24"
                                        Height="24"
                                        Kind="Pencil" />
                                </ToggleButton.Content>
                                <MaterialDesign:ToggleButtonAssist.OnContent>
                                    <MaterialDesign:PackIcon
                                        Width="24"
                                        Height="24"
                                        Kind="ContentSave" />
                                </MaterialDesign:ToggleButtonAssist.OnContent>
                                <ToggleButton.Style>
                                    <Style BasedOn="{StaticResource MaterialDesignActionToggleButton}" TargetType="ToggleButton">
                                        <Setter Property="ToolTip" Value="{x:Static resx:Resources.Edit}" />
                                        <Style.Triggers>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter Property="ToolTip" Value="Save" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ToggleButton.Style>
                            </ToggleButton>

                            <!--  placeholder popup menu for future use to display anything else to remove bloated menu list (eg. changelog, about)  -->
                            <!--<MaterialDesign:PopupBox
                                x:Name="MenuOptionsPopup"
                                Grid.Column="1"
                                PlacementMode="TopAndAlignLeftEdges"
                                StaysOpen="False"
                                ToolTip="{x:Static resx:Resources.Options}">
                                <MaterialDesign:PopupBox.ToggleContent>
                                    <MaterialDesign:PackIcon
                                        Width="24"
                                        Height="24"
                                        Foreground="{DynamicResource MaterialDesign.Brush.Primary}"
                                        Kind="DotsVertical" />
                                </MaterialDesign:PopupBox.ToggleContent>
                                <StackPanel MinWidth="150">
                                </StackPanel>
                            </MaterialDesign:PopupBox>-->
                        </Grid>

                        <ListBox
                            x:Name="MenuItemsListBox"
                            Margin="0,16,0,16"
                            DragDrop:DragDrop.DragAdornerTemplate="{StaticResource DragAdornerTemplate}"
                            DragDrop:DragDrop.DropHandler="{Binding}"
                            DragDrop:DragDrop.DropTargetAdornerBrush="{DynamicResource MaterialDesign.Brush.Primary}"
                            DragDrop:DragDrop.IsDragSource="False"
                            DragDrop:DragDrop.IsDropTarget="False"
                            DragDrop:DragDrop.UseDefaultDragAdorner="False"
                            DragDrop:DragDrop.UseDefaultEffectDataTemplate="False"
                            PreviewMouseLeftButtonUp="UIElement_OnPreviewMouseLeftButtonUp"
                            SelectionChanged="MenuItemsListBox_SelectionChanged"
                            Style="{StaticResource MaterialDesignNavigationPrimaryListBox}">
                            <ListBox.Resources>
                                <Style BasedOn="{StaticResource MaterialDesignScrollBarMinimal}" TargetType="ScrollBar" />
                            </ListBox.Resources>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <MaterialDesign:PackIcon
                                            x:Name="DragHandle"
                                            Grid.Column="0"
                                            Width="16"
                                            Height="16"
                                            Margin="0,0,2,0"
                                            VerticalAlignment="Center"
                                            Kind="DragVertical"
                                            Visibility="Collapsed" />

                                        <CheckBox
                                            x:Name="VisibilityCheckBox"
                                            Grid.Column="1"
                                            Margin="0,0,8,0"
                                            VerticalAlignment="Center"
                                            IsChecked="{Binding Visible, Mode=TwoWay}"
                                            Visibility="Collapsed" />

                                        <TextBlock
                                            Grid.Column="2"
                                            Margin="8,0,0,0"
                                            VerticalAlignment="Center"
                                            Text="{Binding Name}"
                                            ToolTip="{Binding Name}" />
                                    </Grid>
                                    <DataTemplate.Triggers>
                                        <DataTrigger Binding="{Binding ElementName=EditMenuButton, Path=IsChecked}" Value="True">
                                            <Setter TargetName="DragHandle" Property="Visibility" Value="Visible" />
                                            <Setter TargetName="VisibilityCheckBox" Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </DockPanel>
                </MaterialDesign:DrawerHost.LeftDrawerContent>

                <Grid>
                    <MaterialDesign:DrawerHost BorderBrush="{DynamicResource MaterialDesignDivider}">
                        <MaterialDesign:DrawerHost.RightDrawerContent>
                            <SettingsControls:MainSettingsContainerControl />
                        </MaterialDesign:DrawerHost.RightDrawerContent>

                        <DockPanel>
                            <MaterialDesign:ColorZone
                                Padding="16"
                                MaterialDesign:ElevationAssist.Elevation="Dp4"
                                DockPanel.Dock="Top"
                                Mode="PrimaryMid">
                                <Grid>
                                    <ToggleButton
                                        x:Name="MenuToggleButton"
                                        HorizontalAlignment="Left"
                                        Checked="MenuToggleButton_Checked"
                                        IsChecked="False"
                                        Style="{StaticResource MaterialDesignHamburgerToggleButton}"
                                        Unchecked="MenuToggleButton_Unchecked" />

                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="22"
                                        Text="{Binding Name}" />

                                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">

                                        <Controls:IconButton
                                            x:Name="DisconnectionAlertButton"
                                            Margin="0,0,5,0"
                                            Icon="LanDisconnect"
                                            Visibility="Collapsed" />

                                        <Controls:IconButton
                                            x:Name="SectionHelpButton"
                                            Margin="5,0,0,0"
                                            HorizontalAlignment="Center"
                                            Click="SectionHelpButton_Click"
                                            Icon="Help"
                                            Style="{StaticResource MaterialDesignRaisedButton}"
                                            ToolTip="{x:Static resx:Resources.Help}"
                                            Visibility="{Binding HelpLinkVisibility}" />

                                        <Controls:IconButton
                                            x:Name="SettingsButton"
                                            Margin="5,0,0,0"
                                            HorizontalAlignment="Center"
                                            Click="SettingsButton_Click"
                                            Icon="Settings"
                                            Style="{StaticResource MaterialDesignRaisedButton}"
                                            ToolTip="{x:Static resx:Resources.Settings}" />

                                    </StackPanel>
                                </Grid>
                            </MaterialDesign:ColorZone>

                            <ContentControl x:Name="ActiveControlContentControl" />
                        </DockPanel>
                    </MaterialDesign:DrawerHost>
                </Grid>
            </MaterialDesign:DrawerHost>
        </MaterialDesign:DialogHost>

        <Grid x:Name="SettingsGrid" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0">
                <MaterialDesign:ColorZone
                    Padding="16"
                    MaterialDesign:ElevationAssist.Elevation="Dp4"
                    DockPanel.Dock="Top"
                    Mode="PrimaryMid">
                    <Grid>
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="22">
                            Settings
                        </TextBlock>

                        <Controls:IconButton
                            x:Name="CloseSettingsButton"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Click="CloseSettingsButton_Click"
                            Icon="CloseCircleOutline"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            ToolTip="{x:Static resx:Resources.Close}" />
                    </Grid>
                </MaterialDesign:ColorZone>
            </DockPanel>

            <SettingsControls:MainSettingsContainerControl x:Name="MainSettings" Grid.Row="1" />
        </Grid>
    </Grid>
</local:MainControlBase>