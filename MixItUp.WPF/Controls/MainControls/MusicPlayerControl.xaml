<local:MainControlBase
    x:Class="MixItUp.WPF.Controls.MainControls.MusicPlayerControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:CommandsControls="clr-namespace:MixItUp.WPF.Controls.Commands"
    xmlns:Controls="clr-namespace:MixItUp.WPF.Controls"
    xmlns:MaterialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MixItUp.WPF.Controls.MainControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:resx="clr-namespace:MixItUp.Base;assembly=MixItUp.Base"
    d:DesignHeight="700"
    d:DesignWidth="600"
    FontFamily="{MaterialDesign:MaterialDesignFont}"
    TextElement.FontSize="14"
    TextElement.FontWeight="Medium"
    mc:Ignorable="d">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid
            Grid.Row="0"
            Margin="50,20,20,0"
            HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                VerticalAlignment="Center"
                Text="{x:Static resx:Resources.CurrentlyPlayingHeader}" />
            <TextBlock
                Grid.Column="2"
                VerticalAlignment="Center"
                Text="{Binding CurrentlyPlayingSong}" />

            <GroupBox
                Grid.Column="4"
                HorizontalAlignment="Right"
                Header="{x:Static resx:Resources.MusicPlayerOnSongChanged}">
                <CommandsControls:CommandListingButtonsControl
                    x:Name="OnSongChangedCommand"
                    HorizontalAlignment="Center"
                    DataContext="{Binding OnSongChangedCommand}"
                    EditClicked="OnSongChangedCommand_EditClicked"
                    HideDeleteButton="True"
                    HideEnableDisableToggle="True" />
            </GroupBox>
        </Grid>

        <Grid Grid.Row="2" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="40" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="40" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Controls:IconButton
                Grid.Column="0"
                Command="{Binding PreviousCommand}"
                Icon="SkipPrevious" />
            <Controls:IconButton
                Grid.Column="2"
                Command="{Binding PlayPauseCommand}"
                Icon="PlayPause" />
            <Controls:IconButton
                Grid.Column="4"
                Command="{Binding StopCommand}"
                Icon="Stop" />
            <Controls:IconButton
                Grid.Column="6"
                Command="{Binding NextCommand}"
                Icon="SkipNext" />

            <TextBlock
                Grid.Column="8"
                VerticalAlignment="Center"
                Text="{Binding Source={x:Static resx:Resources.Volume}, StringFormat={x:Static resx:Resources.ColumnHeaderFormat}}" />
            <Slider
                Grid.Column="10"
                Width="150"
                VerticalAlignment="Center"
                Maximum="100"
                Minimum="0"
                Style="{StaticResource MaterialDesign3.MaterialDesignDiscreteSlider}"
                Value="{Binding Volume}" />

            <ComboBox
                Grid.Column="12"
                Width="200"
                MaterialDesign:HintAssist.Hint="{x:Static resx:Resources.AudioOutputDevice}"
                ItemsSource="{Binding AudioDevices}"
                SelectedItem="{Binding SelectedAudioDevice}"
                Style="{StaticResource MaterialDesignFloatingHintComboBox}" />

            <Controls:IconButton
                Grid.Column="14"
                Command="{Binding SetFolderCommand}"
                Icon="Folder" />
        </Grid>

        <Grid Grid.Row="4" Visibility="{Binding MusicNotLoaded, Converter={StaticResource BooleanToVisibilityConverter}}">
            <TextBlock
                Width="400"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="{x:Static resx:Resources.MusicPlayerSelectFolderOrPlayMusicToLoadInSongs}"
                TextWrapping="Wrap" />
        </Grid>

        <Grid Grid.Row="4" Visibility="{Binding MusicLoaded, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Border
                Grid.Row="2"
                BorderBrush="{StaticResource MaterialDesign.Brush.Primary}"
                BorderThickness="1">
                <DataGrid
                    x:Name="MainDataGrid"
                    HorizontalContentAlignment="Stretch"
                    CellStyle="{StaticResource StandardDataGridCell}"
                    ItemsSource="{Binding Songs}"
                    Style="{StaticResource StandardDataGrid}">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding Title}"
                            Header="{x:Static resx:Resources.Title}"
                            IsReadOnly="True" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding Artist}"
                            Header="{x:Static resx:Resources.Artist}"
                            IsReadOnly="True" />
                        <!-- <DataGridTextColumn Header="{x:Static resx:Resources.Length}" Binding="{Binding LengthString}" IsReadOnly="True" Width="*" /> -->                    
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>
    </Grid>
</local:MainControlBase>