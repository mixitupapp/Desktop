<local:NotifyPropertyChangedUserControl
    x:Class="MixItUp.WPF.Controls.SliderWithHeaderControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:MaterialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MixItUp.WPF.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="300"
    FontFamily="{MaterialDesign:MaterialDesignFont}"
    TextElement.FontSize="14"
    TextElement.FontWeight="Medium"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    mc:Ignorable="d">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Text="{Binding Text}" />
        <Slider
            x:Name="Slider"
            Maximum="{Binding Maximum}"
            Minimum="{Binding Minimum}"
            Style="{StaticResource MaterialDesign3.MaterialDesignDiscreteSlider}"
            ToolTip="{Binding Text}" />
    </Grid>
</local:NotifyPropertyChangedUserControl>